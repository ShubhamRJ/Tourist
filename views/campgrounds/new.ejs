<% include ../header %>
	<div class="container">
		<h1 style="text-align: center;">Create new campground </h1>
		<br>
		<div class="row">
			<div class="col-sm-6 mx-auto">
				<form action="/campgrounds" autocomplete="off" method="post">
				<div class="form-group">
					<input class="form-control" type="text" name="name" placeholder="Name" required>
				</div>

				<div class="form-group">
					<input class="form-control" type="number" name="price" placeholder="Price" min="1" step="1" required>
				</div>

				<div class="form-group">	
					<input class="form-control" type="text" name="image" placeholder="image-url" required>
				</div>

				<div class="form-group">	
					<input class="form-control" type="text" name="description" placeholder="Description" required>
				</div>

				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
			</form>
			<a href="/campgrounds">Back</a>
			</div>
		</div>
	</div>
<% include ../footer %>