<% include ../header %>
	<div class="container" style="margin-bottom: 20px;">
		<div class="row">
			<div class="col-md-3">
				<div class="list-group">
					<li class="list-group-item" active>Info1</li>
					<li class="list-group-item">Info2</li>
					<li class="list-group-item">Info3</li>
				</div>
			</div>
			<div class="col-md-9">
				<div class="thumbnail">
					<img class="img-responsive" src="<%= campground.image %>">
					<div class="caption-full">
						<h4 class="pull-right">Rs.<%=campground.price%>/night</h4>
						<h4><a href="#s"><%= campground.name %></a></h4>
						<p><%= campground.description %></p>
						<p><em><%= campground.author.username%></em></p>
						<% if(currentUser){ %>
							<% if(campground.author.id.equals(currentUser._id)){%>
								<a class="btn btn-sm btn-warning"href="/campgrounds/<%=campground._id%>/edit">Edit</a>
								<form class="form"action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
									<button class="btn btn-sm btn-danger pull-right">Delete</button>
								</form>
							<%}%>
						<%}%>
					</div>
				</div>		
				<hr>
				<div class="well">
					<form action="/campgrounds/<%=campground._id%>/comments"  autocomplete="off" method="post">
						<div class="form-inline">
							<input class="form-control col-sm -9" type="text" name="comment[text]" placeholder="Comment...">
							<button class="btn btn-sm btn-success">Submit</button>
						</div>
					</form>
					<br>
					<% campground.comments.forEach(function(comment){ %>
					<div class="row">
						<div class="col-md-12">
							<strong><%=comment.author.username%></strong>
							<span class="pull-right">10 days ago</span>
							<p>
								<%=comment.text %>
							</p>
							<%if(currentUser && comment.author.id.equals(currentUser._id)){%>
							<form class="form-inline" action="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
								<input type="Submit" class="btn btn-sm btn-danger pull-right" value="Delete">
							</form>
							<%}%>
						</div>	
						
					</div>
					<%})%>		
				</div>
			</div>
		</div>
	</div>
<% include ../footer %>